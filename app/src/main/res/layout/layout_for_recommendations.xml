<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="blocksDescendants">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:descendantFocusability="blocksDescendants" >
        <Button
            android:id="@+id/expandableButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#565656"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="Here lies name of product"
            android:textSize="20sp"
            android:textColor="#f5faff"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants"/>
    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ecebeb"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:ael_duration="400"
        app:ael_expanded="false"
        app:ael_interpolator="decelerate"
        app:ael_orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:focusable="false"
            android:textSize="20sp"
            android:textColor="@color/personal"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here lies description of the product: "
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="#303030"
            android:id="@+id/descOfProduct"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: "
            android:textSize="20sp"
            android:textColor="@color/personal"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here lies name of the product: "
            android:textSize="20sp"
            android:id="@+id/costOfProduct"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants" >
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:textColor="#e24646"
                android:id="@+id/buyButton"
                android:background="@drawable/highlight_button2"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:descendantFocusability="blocksDescendants" />

        </LinearLayout>

    </LinearLayout>
    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>



    </LinearLayout>

</RelativeLayout>