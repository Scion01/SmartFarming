<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.hauntarl.smartfarming.AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="About"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#3c3b3b"/>
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_consultant"
            android:text="  Consultant:"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:textColor="#505050"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Shivaji B. Navale"
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:textColor="#6c6c6c"
            android:layout_marginLeft="10dp"
            android:id="@+id/consultant_1"
            android:background="@drawable/highlight_button3"/>

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_adb_black_24dp"
            android:text="  Developers:"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:textColor="#505050"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Nishant Tyagi"
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:textColor="#6c6c6c"
            android:layout_marginLeft="10dp"
            android:id="@+id/developer_1"
            android:background="@drawable/highlight_button3"/>
        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Sameer Mungole"
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:textColor="#6c6c6c"
            android:layout_marginLeft="10dp"
            android:id="@+id/developer_2"
            android:background="@drawable/highlight_button3"/>
        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Abhilash Tayade"
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:textColor="#6c6c6c"
            android:layout_marginLeft="10dp"
            android:id="@+id/developer_3"
            android:background="@drawable/highlight_button3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:background="@drawable/highlight_button1"
            android:text="Share the App"
            android:textColor="@color/personal"
            />

    </LinearLayout>



</ScrollView>